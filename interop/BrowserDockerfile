FROM mcr.microsoft.com/playwright

WORKDIR /app

COPY package.json ./
COPY ./packages ./packages
COPY ./interop ./interop

# disable colored output and CLI animation from test runners
ENV CI=true

RUN npm i
RUN npm run build

# We install browsers here instead of the cached version so that we use the
# latest browsers at run time. Ideally this would also be pinned, but playwright
# controls this, so there isn't much we can do about it.
RUN npx playwright install-deps

# Options: chromium, firefox, webkit
ARG BROWSER=chromium
ENV BROWSER=${BROWSER}

WORKDIR /app/interop

ENTRYPOINT npm test -- -t browser -- --browser $BROWSER
