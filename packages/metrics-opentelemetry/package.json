    "build": "aegir build",
    "test": "aegir test",
    "test:node": "aegir test -t node --cov",
    "test:electron-main": "aegir test -t electron-main"
  },
  "dependencies": {
    "@libp2p/interface": "^3.1.0",
    "@libp2p/utils": "^7.0.9",
    "@opentelemetry/api": "^1.9.0"
  },
  "devDependencies": {
    "@libp2p/logger": "^6.2.2",
    "aegir": "^47.0.22"
